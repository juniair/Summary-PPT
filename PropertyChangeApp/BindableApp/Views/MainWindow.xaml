<Window x:Class="BindableApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="BinableBaseApp" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label Content="{Binding Name}" 
                   FontSize="25"
                   Height="300" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Content="Click" Command="{Binding RunCommand}" />
        </StackPanel>
    </Grid>
</Window>
